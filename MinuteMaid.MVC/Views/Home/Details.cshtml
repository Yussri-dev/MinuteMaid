@model Recipe
<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">@Model.Name</h2>
            <p class="card-text"><strong>Temps de préparation :</strong> @Model.CookingTimeInMinutes min</p>
            <h3>Ingrédients :</h3>
            <p>@Model.Ingredients</p>
            <h3>Étapes :</h3>
            <p>@Model.Steps</p>
            <a asp-action="Index" class="btn btn-danger mt-3">Retour à l'accueil</a>
        </div>
    </div>
</div>